.menu
  background-color: rgba(black,0.0)
  width: 100%
  z-index: 3
  left: 0
  top: 0
  padding: 20px 0
  position: absolute
  font-family: $heading
  text-transform: uppercase
  transition: transform 600ms $easing, top 600ms cubic-bezier(0.77, 0, 0.175, 1)
  // animation: fade 1500ms ease
  color: $white

  &.dark
    color:$dark


  &.clone
    position: fixed
    top: -100px
    z-index: 8
    color: rgba($white,0.9)
    background-color: #2a2a2a

    .typelogo
      color: rgba($white,0.9)
      opacity: 0
      transition: opacity 300ms ease
      a
        color: rgba($white,0.9)

    .sidebar-control
      opacity: 0
      transition: opacity 300ms ease

    &.down
      top: 0

      .typelogo
      .sidebar-control
        opacity: 1

  .typelogo
    font-family: $berlin-connect
    font-size: 36px
    line-height: @font-size
    font-weight: 400
    -webkit-font-kerning: normal
    letter-spacing: -1px

    a
      color: $white
      text-decoration: none

  .logo
    background: url('../img/logo.png');
    background-image: url('../img/logo.svg'), none;
    background-position: center center
    background-repeat: no-repeat
    height: 40px
    width: @height
    background-size: @height

  .sidebar-control
    float: right
    font-weight: 600
    posiiton: relative
    font-size: 20px
    margin-top: 4px
    cursor: pointer


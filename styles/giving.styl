.giving
  .wrapper.page
    padding: 80px 0
    
    .button
      display: inline-block
      margin: 20px auto 10px
      min-width: 300px
      position: relative
      
      &:after
        content: ''
        position: absolute
        width: 100%
        bottom: -50px
        left: 0
        height: 30px
        background-image: url('../img/payment-icons.svg')
        background-position: center center
        background-repeat: no-repeat
        background-size: 80%
        margin: 10px 0 0
        opacity: 0.3
        display: inline-block
      
    small
      display: block
      font-style: italic 
      font-size: 12px 
      
    .giving-copy
      padding-right: 40px
      width: 70%
      
    .bank-details
      width: 30%
      
      p
        font-size: 16px
        line-height: @font-size + 8px
        margin-bottom: 10px
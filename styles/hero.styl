@keyframes fade
  0%
    opacity: 0

  80%
    opacity: 0

  100%
    opacity: 1

@keyframes fadeTo
  0%
    opacity: 0

  80%
    opacity: 0

  100%
    opacity: 0.2

@keyframes fadeIn
  0%
    opacity: 0

  100%
    opacity: 1

@keyframes fadeOut
  0%
    opacity: 1

  95%
    opacity: 1

  100%
    opacity: 0

@keyframes fadeinslow
  0%
    opacity: 0

  50%
    opacity: 1

  100%
    opacity: 0

@keyframes slideUp
  0%
    transform: translateY(180px)
    opacity: 0

  60%
    transform: translateY(180px)
    opacity: 1

  100%
    transform: translateY(0)
    opacity: 1


@-webkit-keyframes slideUp
  0%
    -webkit-transform: translateY(180px)

  60%
    -webkit-transform: translateY(180px)

  100%
    -webkit-transform: translateY(0)

@-moz-keyframes slideUp
  0%
    -moz-transform: translateY(180px)

  60%
    -moz-transform: translateY(180px)

  100%
    -moz-transform: translateY(0)

.sub-hero
.hero
.video-hero
  width: 100%
  background-position: center center
  background-repeat: no-repeat
  background-size: cover
  text-align: center
  color: $white
  position: relative
  background-color: $white

  .wrapper
    padding: 70px 0 120px
    position: relative
    z-index: 2

  .logo
    background: url('../img/logo.png');
    background-image: url('../img/logo.svg'), none;
    background-position: center center
    background-repeat: no-repeat
    height: 200px
    width: @height
    background-size: @height
    animation: slideUp 2000ms ease
    margin: 0 auto 49px

  h1
    font-size: 100px
    line-height: @font-size + 10px
    font-weight: 600
    text-transform: uppercase
    letter-spacing: 1px
    padding: 0 0 10px
    animation: fade 3000ms ease

  p
    font-size: 28px
    line-height: 40px
    width: 540px
    font-weight: 400
    margin: 0 auto
    font-style: italic
    animation: fade 3600ms ease

  .social-links
    font-size: 60px
    animation: fade 4000ms ease

    a
      margin: 0 20px
      text-decoration: none
      color: white

  .arrow
    font-size: 80px
    width: 100%
    left:0
    text-align: center
    position: absolute
    bottom:0px
    animation: fade 5000ms ease

  &#whitetablehero
    background-color: $white
    animation: fade 1000ms ease

    .wrapper
      padding: 70px 0 70px

      .whitetablelogo
        width: 400px
        height: 400px
        background-image: url('../img/whitetablelogo.svg')
        background-position: center center
        background-size: cover
        margin: 40px auto

      p
        color: $mid
        width: 740px
        animation: fade 1600ms ease

    .menu
      color: $dark !important

  &#heartforthehousehero
    background-color: $yellow
    animation: fade 1000ms ease

    .wrapper
      padding: 70px 0 120px

      .heading-container
        width: 290px
        margin: 0 auto
        text-align: center

      h1
        font-family: $heading
        color: $yellow
        font-size: 75px
        line-height: @font-size + 20px
        font-style: italic
        font-weight: 900
        animation: fade 2000ms ease
        display: inline
        background-image: url("/img/underline-yellow.svg")
        background-position: 200px 88px
        background-size: 1px 10px
        background-repeat: repeat-x

      .logos
        margin-top: 50px
        animation: fade 2600ms ease

        span
          margin: 0 5px

        .hfthlogo
          display: inline-block
          width: 54px
          height: @width
          background-image: url('../img/hfth-yellow.svg')

        .bclogo
          display: inline-block
          width: 52px
          height: @width
          background-image: url('../img/logo-outline-yellow.svg')

      .arrow
        color: $yellow

    .menu
      color: $yellow !important

  &#ourvenuehero
    background-color: $dark
    background-image: url('../img/newvenue2.jpg')
    animation: fade 1000ms ease
    background-position: center center

    .wrapper
      padding: 220px 0

      h1
        font-family: 'marker'
        margin-bottom: 20px
        display: inline-block
        padding: 0 30px

        &.three
          animation: fade 2000ms ease

        &.brush
          background-image: url('../img/brush.svg');
          background-position: center center
          background-size: 105%
          background-repeat: no-repeat

.sub-hero
  padding: 200px 0
  background-position: center top
  background-attachment: fixed
  animation: fadeIn 1000ms ease

  .overlay
    position: absolute
    left: 0
    top: 0
    height: 100%
    width: 100%
    background: rgba(black,0.2)
    z-index: 0

  h1
  h2
    z-index: 2
    position: relative
    animation: fade 1500ms ease

  h2
    font-weight: 200
    color: $white
    font-size: 46px
    line-height: @font-size + 10px
    font-style: italic
    margin: 0 0 10px
    padding: 0

  h1
    text-transform: uppercase
    font-size: 80px
    line-height: @font-size
    color: $white
    margin-bottom: 20px



.video-hero
  width: 100%
  height: auto
  background:black
  overflow: hidden

  .wrapper
    opacity: 0

    .logo
    h1
    p
    .social-links
      animation: none

  video
    position: absolute
    z-index: 0
    opacity: .4
    transition: opacity 1000ms ease
    top: 0
    left: 0
    min-width: 100%
    min-height: 100%
    width: auto
    height: auto
    overflow: hidden
    // animation: fadeOut 300ms 15000ms ease

  &.backgroundAdded
    background: black url('../img/hero.jpg') center center no-repeat

    video
      opacity: 0

  &.fadeOut
    background-size: cover

    .wrapper
      opacity: 1

      .logo
        animation: slideUp 2000ms ease

      h1
        animation: fade 3000ms ease

      p
        animation: fade 3600ms ease

      .social-links
        animation: fade 4000ms ease

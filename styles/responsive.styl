@media $media-desktop-wide
  body
    .menu
      display: none

    .sidebar-container
      transform: scale(1)
      z-index: 1

    .sidebar
      transform: translateX(0)
      z-index: 1

      .menu-message
        display: none

      .social-links
        opacity: 1

      .sidebar-container
        opacity: 1

      .logo-outline
        opacity: 0.4

    .content
    .footer
      transform: translateX(-160px)

    &.active
      .content
      .menu
      .footer
        transform: translateX(0)

    .footer
      .nav-links
      .white-logo
        display: none



@media $media-desktop-big

  body
    .menu
      .wrapper
        .logo
            display: none

    // Give slates a defined width
    .slates
      width: 1550px
      height: 100%
      margin: 0 auto

@media $media-desktop

  body
    .menu
      .wrapper
        .logo
            display: none

    // Intro sections on the homepage
    section .intro
      width: 700px

@media $media-tablet

  body
    .menu
      .wrapper
        .logo
            display: none
    .wrapper
      width: 800px
      box-sizing: border-box
      padding: 0 10px

    // Hero section
    .hero
      .wrapper
        padding: 70px 0 120px

        h1
          font-size: 90px

        p
          font-size: 26px
          width: 500px

    // Footer sections
    .footer
      .nav-links
        width: 538px

        ul
          margin-left: 50px

    &.heart-for-the-house
      .content
        .intro
        .threeways
          .wrapper
            .bodytext
              width:100%
              max-width: 560px
              height: auto
              column-count: 1
              column-gap: 0

              p
                margin-bottom: 20px

            .cols .col
              h2
                font-size: 50px
                line-height: 55px

              p
                font-size: 22px
                line-height: 30px

        .stories
          .story
            width: 50%

            .copyoverlay
              table, table td
                padding: 0 50px

                p
                  font-size: 3.5em
                  line-height: 1.2em

            .image
              .name
                font-size: 34px
                line-height: 30px
                bottom: 40px

@media $media-tablet-portrait

  body
    .menu
      .wrapper
        .logo
            display: none
    .wrapper
      width: 750px
      padding: 0 20px

    // Hero section
    .hero
      .wrapper
        padding: 70px 0 120px

        h1
          font-size: 80px

        p
          font-size: 22px
          width: 500px

    section
      .slates
        .slate
          .caption
            bottom: 15px
            left: 15px
            right: 15px

            h2
              font-size: 26px
              line-height: @font-size + 6px
              font-family: $heading
              text-transform: uppercase
              font-weight: 900
              letter-spacing: 1px
            p
              font-size: 17px

      .easter-teaser
        .heading
          font-size: 60px
          line-height: @font-size
          color: $blue
          letter-spacing: 40px
          border: 8px solid white
          padding:15px 45px
          padding-right: 10px

    &.easter
      .hero-image
        .heading
          font-size: 60px
          line-height: @font-size
          color: $blue
          letter-spacing: 40px
          border: 8px solid white
          padding:15px 45px
          padding-right: 10px

    &.the-white-table
      .content
        .hero#whitetablehero
          .wrapper
            p
              width: 100%

        .wrapper
          section .items a .item
            span.right
              background: red
              display: none

    &.heart-for-the-house
      .content
        .intro
        .threeways
          .wrapper
            .bodytext
              width:100%
              max-width: 560px
              height: auto
              column-count: 1
              column-gap: 0

              p
                margin-bottom: 20px

            .cols .col
              h2
                font-size: 50px
                line-height: 55px

              p
                font-size: 22px
                line-height: 30px

        .stories
          .story
            width: 50%

            .copyoverlay
              table, table td
                padding: 0 50px

                p
                  font-size: 3em
                  line-height: 1.2em

            .image
              .name
                font-size: 24px
                line-height: 30px
                bottom: 20px

@media $media-full-width

  body
    .menu
      .wrapper
        .logo
            display: none
    .wrapper
      width: 100%

    // Hero section
    .hero
      .wrapper
        padding: 70px 0 100px

        .logo
          height: 140px
          width: @height
          background-size: @height
          margin-bottom: 10px

        h1
          font-size: 70px
          line-height: @font-size + 8px

        p
          font-size: 22px
          line-height: @font-size + 10px
          width: 100%
          padding: 0 40px

      &#newvenuehero
        .wrapper
          h1
            font-size: 60px

    .sub-hero
      background-attachment: scroll
      padding: 100px 0

    // Intro sections on the homepage
    section .intro
      padding: 50px 0

      h2
        font-size: 26px
        line-height: @font-size + 10px
        font-style: italic
        margin: 0 0 6px
        padding: 0

      h1
        text-transform: uppercase
        font-size: 40px
        line-height: @font-size + 6px
        color: $dark
        margin-bottom: 0

      p
        font-size: 18px
        line-height: @font-size + 15px
        color: $mid
        margin-bottom: 15px

    section
      .slates
        .slate
          width:100%  !important
          padding-bottom: 50%  !important

          .caption
            bottom: 30px
            left: 30px
            right: 30px

            h2
              font-size: 36px
              line-height: @font-size + 6px
            p
              font-size: 20px

      .easter-teaser
        padding: 120px 0

        .heading
          font-size: 55px
          line-height: @font-size
          color: $blue
          letter-spacing: 20px
          border: 6px solid white
          padding:10px 49px
          padding-right: 5px

    .wrapper.page
      padding-top: 30px
      padding-bottom: 30px

    .footer
      .white-logo
        display: none

      .nav-links
         width: auto

        ul
          margin-left: 0px

    .lightbox
      .lightbox-container
        width: 96%
        height: auto
        margin: 10px auto

        .header-image
          width: 100%
          height: 240px

          .header-copy
            padding: 0 8px
            box-sizing: border-box

            h2
              font-size: 38px
              line-height: @font-size + 6px
              margin:0 0 10px

            p
              font-size: 20px
              line-height: @font-size + 6px
              width: 100%
              font-style: italic

        .container
          padding: 40px 20px

          .video-container
            padding-bottom: 56%
            position: relative
            width: 100%
            height: 0

            iframe
              position: absolute
              width: 100%
              height: 100%
              left: 0
              top: 0

        .button-container
          display: block

  .giving
    .wrapper.page
      padding-top: 30px
      padding-bottom: 30px

      .giving-copy, .bank-details
        text-align: center
        width: 100%
        box-sizing: border-box
        padding: 0 10px

      .bank-details
        margin-top: 80px

  body.easter
    section
      p
        width: 100%

  body.the-white-table
    .content
      .hero#whitetablehero
        .wrapper
          .whitetablelogo
            width: 290px
            height: 290px

      .wrapper
        section
          padding: 50px 0

          h2
            font-size: 26px
            line-height: @font-size + 10px
            font-style: italic
            margin: 0 0 6px
            padding: 0

          h1
            text-transform: uppercase
            font-size: 40px
            line-height: @font-size + 6px
            color: $dark
            margin-bottom: 0

          .items
            a
              .item
                padding: 15px 0
                position: relative

                .entypo
                  margin-top: 0

                h3
                  position: absolute
                  width: 90%
                  white-space: nowrap
                  overflow: hidden
                  text-overflow: ellipsis
                  margin-left: 0px
                  top: 12px

  body.heart-for-the-house
    .content
      .intro
      .threeways
        .wrapper
          .heading-container
            max-width: 330px
            margin: 0 auto 40px
            text-align: center

          h1
            font-size: 40px
            line-height: 56px
            background-image: url("/img/underline.svg")
            background-position: 200px 48px
            background-repeat: repeat-x

          .bodytext
            width:100%
            max-width: 560px
            column-count: 1
            column-gap: 0

            p
              margin-bottom: 20px
              text-align: left

          .cols .col
            h2
              font-size: 50px
              line-height: 55px
              margin-bottom: 10px

            p
              font-size: 22px
              line-height: 30px

          .video-container
            padding-bottom: 56%
            position: relative
            width: 100%
            height: 0

            iframe
              position: absolute
              width: 100%
              height: 100%
              left: 0
              top: 0

      .stories
        .story
          width: 100%

          .copyoverlay
            opacity: 1
            background: rgba($dark,0.5)

            table, table td
              padding: 0 20px

              p
                font-size: 3.8em
                line-height: 1.3em
                opacity: 1
                color: $yellow

          &:hover
            .copyoverlay
              opacity: 1

              table p
                transform: scale(0.95)

          .image
            .name
              font-size: 36px
              line-height: 46px
              color: $yellow
              bottom: 30px
              z-index: 5

@media $media-mobile

  body
    .sidebar
      .entypo
        &.close
          top: 0

      .sidebar-container
        padding-top: 20px

    .button
      position: relative
      padding: 18px 0 17px
      width: 100%

    .menu
      padding: 13px 0

      .wrapper
        .logo
            display: none

      .typelogo
        padding-top: 3px
        font-size: 28px

      .sidebar
        padding-top: 2px

    .hero
      &#newvenuehero
        .wrapper
          h1
            font-size: 50px
            margin-bottom: 0

    .sub-hero
      h2
        font-weight: 300
        font-size: 30px
        line-height: @font-size + 10px
        margin: 0 0 5px
        padding: 0

      h1
        text-transform: uppercase
        font-size: 50px
        line-height: @font-size
        margin-bottom: 20px

    section .intro
      .video-container
        padding-bottom: 56%
        position: relative
        width: 100%
        height: 0

        iframe
          position: absolute
          width: 100%
          height: 100%
          left: 0
          top: 0

    .wrapper.page
      padding: 30px 15px

      ol
        padding-left: 20px

      p
        font-size: 18px
        line-height: @font-size + 15px

      .button
        margin: 10px 0

    .footer
      .nav-links
        width: 100%
        clear:right

        ul
          margin-left: 0px
          display:block
          max-width: 100%
          margin 0

          &.first
            margin 0

          li
            margin-bottom: 10px
            font-size: 16px

      .copyrights
        text-align: center
        .social-links
          clear:right
          display: block
          font-size: 65px
          width: 100%

          a
            color: $light
            margin-left: 10px
            text-decoration: none

    .lightbox
      .lightbox-container
        .header-image
          height: 200px

          .header-copy
            h2
              font-size: 34px
              line-height: @font-size
              margin: 0

  body.easter
    section
      h1
        font-size: 30px
        letter-spacing: 3px
        border: 4px solid $dark
        padding:10px 30px
        display: inline-block

      p
        font-size: 17px
        line-height: @font-size + 17px

  body.new-venue
    .content
      section
        .intro
          padding: 50px 0px

      .mapContainer
        .wrapper
          position: relative

          .mapInfo
            margin: 20px
            width: 280px
            height:500px
            padding: 20px
            background:rgba($dark,0.96)
            right:0
            position: absolute
            z-index: 1
            color: $white
            border-radius: 5px

            a
              margin-top: 30px
              display: block

        .map
          height: 540px

  body.heart-for-the-house
    .content
      .threeways
        .wrapper
          .cols .col
            width: 100%
            margin-bottom: 40px

            &:last-child
              margin-bottom: 0

            h2
              font-size: 48px
              line-height: 54px
              margin-bottom: 10px

            p
              font-size: 22px
              line-height: 32px

      .stories
        .story
          width: 100%

          .copyoverlay
            opacity: 1
            background: rgba($dark,0.5)

            table, table td
              padding: 0 20px

              p
                font-size: 2.8em
                line-height: 1.3em
                opacity: 1
                color: $yellow

@media $media-mobile-portrait

  body
    .menu
      .typelogo
        display: none
      .wrapper
        .logo
          display: block

    &.heart-for-the-house
      .menu
        .wrapper
          .logo
            background-image: url('../img/logo-yellow.svg'), none;

        &.clone
          .wrapper
            .logo
              background-image: url('../img/logo-dark.svg'), none;

    .hero
      .wrapper
        padding: 70px 0 100px

        h1
          font-size: 40px
          line-height: @font-size + 6px

        p
          font-size: 20px

      &#newvenuehero
        .wrapper
          padding: 100px 0 80px

          h1
            font-size: 35px
            margin-bottom: 10px

    section
      .slates
        .slate
          width:100%  !important
          padding: 0 !important
          display: table
          height: auto !important
          position: relative

          .background-image
            &:before
              opacity: 0

          .caption
            position: relative
            display:block
            vertical-align:middle
            text-align: center
            bottom: 0
            left: 0
            right: 0
            width: 100%
            padding: 60px 0

            h2
              font-size: 30px
              line-height: @font-size + 6px
              text-align: center
              width: 100%
            p
              display: none

      .easter-teaser
        padding: 60px 0

        .heading
          font-size: 35px
          line-height: @font-size
          color: white
          letter-spacing: 20px
          border: 4px solid white
          padding:15px 35px
          padding-right: 10px

    &.easter
      .hero-image
        .heading
          font-size: 35px
          line-height: @font-size
          color: white
          letter-spacing: 20px
          border: 4px solid white
          padding:15px 35px
          padding-right: 10px

  &.new-venue
    .menu
      .logo
        display: block
        background-image: url('../img/logo.svg')

      &.clone
        .logo
          display: block
          background-image: url('../img/logo-dark.svg')
// FONT FACE
@font-face
  font-family: 'entypo';
  src: url('../fonts/entypo/entypo.eot')
  src: url('../fonts/entypo/entypo.eot?iefix') format('eot'), url('../fonts/entypo/entypo.woff') format('woff'), url('../fonts/entypo/entypo.ttf') format('truetype'), url('../fonts/entypo/entypo.svg#webfonthOIcM5wm') format('svg')
  font-weight: 400
  font-style: normal

@font-face
  font-family: 'entypo-social';
  src: url('../fonts/entypo/entypo-social.eot')

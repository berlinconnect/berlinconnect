  font-weight: 400
  font-style: normal

.entypo-social
  font-family: 'entypo-social'

.entypo
  font-family: 'entypo'

.entypo
.entypo-social
  padding:0
  margin:0
  font-weight:normal
  display:inline-block
  vertical-align: middle
  text-align: center

  // sizes

  &.medium
    color:$light
    font-size:60px
    line-height:62px

    &:hover
      color:$blue

  &.big
    color:$blue
    font-size:109px
    line-height:109px

